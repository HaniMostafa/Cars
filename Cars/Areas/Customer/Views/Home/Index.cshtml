<!-- product section -->
<section class="product_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Our <span>Cars</span>
            </h2>
        </div>
        <div class="row">
            @foreach (var item in Model.Carss)
            {
                
            
            <div class="col-sm-6 col-md-4 col-lg-4">
                <div class="box">
                    <div class="option_container">
                        <div class="options">
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn">
                                Details
                            </a>
                        </div>
                    </div>
                    <div class="img-box">
                      @if(item.CarImages!=null && item.CarImages.Count() > 0) {
                            <img src="@item.CarImages.FirstOrDefault().ImgUrl" class="card-img-top rounded" />
                        }
                        else {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        } 
                        </div>
                    <div class="detail-box">
                        <h5>
                            @item.Title
                        </h5>
                        <h6>
                                @item.Price.ToString()
                        </h6>
                    </div>
                </div>
            </div>
            }
            
        </div>
    </div>
</section>
