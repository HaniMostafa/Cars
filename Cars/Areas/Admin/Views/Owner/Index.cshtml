@model List<Owner>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">المالك</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Owner" asp-action="UpSert" class="custom-btn btn-primary mx-2">
                    <i class="bi bi-plus-circle"></i>  Create New Owner
                </a>
            </div>
        </div>
        <table id="tbldata" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>image</th>
                    <th>name</th>
                    <th>phone</th>
                    <th>Action</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Image" style="max-width: 100px; max-height: 100px;" />
                        </td>

                        <td>@item.Name</td>
                        <td>@item.Phone</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Owner" asp-action="Upsert" asp-route-id="@item.Id" class="custom-btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> تعديل
                                </a>
                                <a asp-controller="Owner" asp-action="Delete" asp-route-id="@item.Id" class="custom-btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> حذف
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
@section Scripts {
    <script src="~/js/owner.js"></script>
}
