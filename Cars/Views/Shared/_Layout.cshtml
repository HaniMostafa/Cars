@using Utalties

<!DOCTYPE html>
<html>
<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="~/images/lo.jpg" type="">
    <title>Ardh-Al Ahlam-Cars</title>
    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
    <!-- font awesome style -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/styleBuleCar.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
    @RenderSection("Style", required: false)
</head>
<body>
    <header class="header_section">
        <div  class="container">
            <nav class="navbar navbar-expand-lg custom_nav-container ">
                <a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index"><img width="250" src="~/images/mylo.jpg" alt="#" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""> </span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">معرض ارض الاحلام<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.google.com/maps?q=25.3484420776367,55.4831390380859">موقع المعرض</a>
                        </li>
                        <li class="nav-item">
                            <a href="#about">معلومات المعرض </a>
                        </li>
                        <li class="nav-item">
                            <a href="#product_section"> سيارات المعرض </a>
                        </li>
                        @if (User.IsInRole(SD.Role_Admin))
                        {                          
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="KindOfCar" asp-action="Index">انواع السيارات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Car" asp-action="Index" >السيارات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Owner" asp-action="Index">المالك</a>
                        </li>
                        }                               
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <partial name="_Notifications" />
    @RenderBody()
    <!-- footer start -->
   
    <!-- footer end -->
    <div class="cpy_">
        <p>© 2024 Made By <i class="bi bi-suit-heart-fill"></i> Prof: Hani & Mohamed Hamouda <i class="bi bi-suit-heart-fill"></i></p>
    </div>

    <!-- jQery -->
    <script src="js/jquery-3.4.1.min.js"></script>
    <!-- popper js -->
    <script src="js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="js/bootstrap.js"></script>
    <!-- custom js -->
    <script src="js/custom.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", false)
</body>
</html>